        <!-- 阀门开关按钮样式 -->
        <Style x:Key="ValveToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FFE6E6E6"/>
            <Setter Property="BorderBrush" Value="#FF9B9B9B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3">
                            <Grid>
                                <TextBlock x:Name="offText" 
                                           Text="关" 
                                           Foreground="Red"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="onText"
                                           Text="开" 
                                           Foreground="Green"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFB5E61D"/>
                                <Setter Property="BorderBrush" Value="#FF7BAD00"/>
                                <Setter TargetName="offText" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="onText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE3E3E3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Boolean 取反转换器 -->
        <converters:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
        <converters:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

