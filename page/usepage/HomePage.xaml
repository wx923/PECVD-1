            <RowDefinition Height="Auto"/>  <!-- PLC状态显示 -->
            <RowDefinition Height="Auto"/>  <!-- 标题 -->
            <RowDefinition Height="*"/>     <!-- 主要内容 -->
            <RowDefinition Height="Auto"/>  <!-- 状态栏 -->
