                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="4"
                Margin="0,5,0,10">
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <ItemsControl ItemsSource="{Binding PlcStatuses}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5,0" BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    <Ellipse Width="12" Height="12" 
                                             Margin="5,0"
                                             Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"/>
                                    <Button Content="{Binding IsConnected, Converter={StaticResource ConnectedTextConverter}}"
                                            Command="{Binding ConnectCommand}"
                                            Style="{StaticResource PlcConnectButtonStyle}"
                                            Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
