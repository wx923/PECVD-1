                                        <TextBlock Text="{Binding PaddleAreas[1].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[1].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
