                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区6" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding PaddleAreas[5].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[5].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[5].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[5].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
                                                   TextAlignment="Center" 
                                                   Margin="0,1" 
                                                   FontSize="11"
                                                   Background="{Binding PaddleAreas[5].Status, Converter={StaticResource BoatStatusToColorConverter}}"/>
                                    </StackPanel>
                            </Border>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- 右侧暂存区卡片 -->
                    <materialDesign:Card Grid.Column="1" Margin="2">
                        <StackPanel>
                            <TextBlock Text="暂存区" FontSize="14" FontWeight="Bold" Margin="5" HorizontalAlignment="Center"/>
                            <UniformGrid Columns="3" Margin="5">
                                <!-- 暂存区1 (原小车区) -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区1" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding StorageAreas[0].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[0].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[0].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[0].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
