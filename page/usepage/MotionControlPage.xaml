                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区3" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding StorageAreas[2].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[2].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[2].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[2].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
                                                   TextAlignment="Center" 
                                                   Margin="0,1" 
                                                   FontSize="11"
                                                   Background="{Binding StorageAreas[2].Status, Converter={StaticResource BoatStatusToColorConverter}}"/>
                                    </StackPanel>
                                </Border>
                                <!-- 暂存区4 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区4" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding StorageAreas[3].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[3].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[3].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[3].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
                                                   TextAlignment="Center" 
                                                   Margin="0,1" 
                                                   FontSize="11"
                                                   Background="{Binding StorageAreas[3].Status, Converter={StaticResource BoatStatusToColorConverter}}"/>
                                    </StackPanel>
                                </Border>
                                <!-- 暂存区5 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="暂存区5" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding StorageAreas[4].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
