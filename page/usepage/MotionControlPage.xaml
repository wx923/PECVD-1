                                <!-- 桨区1 -->
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="2" CornerRadius="3" MinWidth="60">
                                    <StackPanel Margin="3">
                                        <TextBlock Text="桨区1" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,2" FontSize="12"/>
                                        <TextBlock Text="{Binding PaddleAreas[0].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[0].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[0].TotalCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding PaddleAreas[0].Status, Converter={StaticResource BoatStatusToColorConverter}}" 
                                                   TextAlignment="Center" 
                                                   Margin="0,1" 
                                                   FontSize="11"
