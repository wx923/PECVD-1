                                        <TextBlock Text="{Binding StorageAreas[5].BoatNumber}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
                                        <TextBlock Text="{Binding StorageAreas[5].CurrentCoolingTime}" TextAlignment="Center" Margin="0,1" FontSize="11"/>
