<Page x:Class="WpfApp4.page.usepage.ParameterSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.page.usepage"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="ParameterSettingPage">

    <Page.Resources>
        <!-- 添加TextBox的统一样式 -->
        <Style x:Key="ParameterTextBox" TargetType="TextBox">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="#FF999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <!-- 添加TextBlock样式 -->
        <Style x:Key="ParameterTextBlock" TargetType="TextBlock">
            <Setter Property="Width" Value="80"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 添加CheckBox的样式 -->
        <Style x:Key="ParameterCheckBox" TargetType="CheckBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧内容区域 -->
        <ScrollViewer Grid.Column="0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 第一列 -->
                <StackPanel Grid.Column="0" Margin="2">
                    <!-- 温控参数设定 -->
                    <GroupBox Header="温控参数设定" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧列 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="最大温度(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="偏差范围低(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="偏差范围高(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="温度补偿(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="电流设置(A)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="温度偏差延时" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="升温限制(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="降温限制(℃)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="尾排超温报警范围" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="尾排超温警告范围" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 泵配置 -->
                    <GroupBox Header="泵配置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧列 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="泵后压力上限警告范围" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="泵后压力上限报警范围" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="泵1电路上限(0.1A)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="泵2电路上限(0.1A)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="真空预抽泵#1设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="真空预抽泵#2设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="真空主抽能效率#1设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="真空主抽能效率#2设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- MFC量程设置 -->
                    <GroupBox Header="MFC量程设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧列 - 8个参数 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="N2量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="SiH4量程设置" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="NH3量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="N2O量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="CH4量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="B2H6量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="O2量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="H2量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 - 7个参数 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="N2O量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="Ar量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="NF3量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="CO2量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="SiH4(2)量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="H2O量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="PH3量程" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- 第二列 -->
                <StackPanel Grid.Column="1" Margin="5">
                    <!-- 冷却水报警参数设置 -->
                    <GroupBox Header="冷却水报警参数设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧列 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水黄灯警告时间" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水红灯警告时间" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水流量警告下限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水流量报警下限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水温度警告下限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水温度报警下限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水温度警告上限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水温度报警上限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水流量警告上限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="冷却水流量报警上限" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 泵抽气设置 -->
                    <GroupBox Header="泵抽气和Scrubber设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧列：泵抽气设置 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="主抽预抽转换压力" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="主抽切换压力" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="充氮回压开启压力" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="待料抽空时间" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列：Scrubber管道清洗 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="保持压压力时间(s)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="回压氮气流" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="循环次数" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="回压氮气时间(s)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 流量/压力报警设置 -->
                    <GroupBox Header="流量/压力报警设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧列 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="N2偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="SiH4偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="NH3偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="B2O偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="CH4偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="B2H6偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="O2偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="H2偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="PH3偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="Ar偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="NF3偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="CO2偏差(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="加载延时(s)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="压力偏差范围(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="源压设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="漂移加压压力值" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </StackPanel>

                <!-- 第三列 -->
                <StackPanel Grid.Column="2" Margin="5">
                    <!-- 清洗设置 -->
                    <GroupBox Header="���洗设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧列 - 7个参数 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="前清洗氮气流量" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="后洗氮气流量" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="硼烷/邻烷后清洗次数" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="MFC清洗管压力(mbar)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="MFC清洗流量" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="MFC清洗抽空时间(s)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="MFC清洗充气时间(s)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 - 6个参数 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="炉管清洗流量" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="炉管清洗抽气时间" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="炉管清洗充气时" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="炉管清洗循环次数" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="MFC清洗循环次数" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="炉管清洗管压力(mbar)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 射频参数设置 -->
                    <GroupBox Header="射频参数设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧列 - 4个参数 -->
                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="功率设定" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="范围(%)" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="脉冲间隔" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="频率目标" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- 右侧列 - 3个参数 -->
                            <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="功率斜率" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="温度斜率" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="频率斜率" Style="{StaticResource ParameterTextBlock}"/>
                                    <TextBox Style="{StaticResource ParameterTextBox}"/>
                                </DockPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- 蝶阀和功率补偿设置 -->
                    <GroupBox Header="蝶阀和功率补偿设置" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
